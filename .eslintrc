{
	"extends": [],
	"plugins": [] /* плагины способны извлекать код и отправлять на прогон через линтер */,
	"parser": "esprima" /* стандартный парсер eslint (не обязательно использовать "babel-eslint" если в проекте есть "babel") */,
	"parserOptions": {
		"ecmaVersion": 11 /* поддержка фич из ES-XX */,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true /* не связано с React (у React спецефический jsx) */,
			"impliedStrict": false /* включает проверку под "strict mode" */
		}
	},
	"env": {
		/* frontend */
		"browser": true,
		"es6": true,
		"es2017": true,
		"es2020": true,
		"jest": false,
		"worker": false,
		"serviceworker": false,
		"jquery": false /* страшно блять, но возможно */,
		/* backend */
		"node": false,
		"mongo": false,
		"amd": false,
		/* глобальные переменные общие для ноды и браузера */
		"shared-node-browser": false
	},
	/* управление глобальными переменными */
	"globals": {},
	"rules": {
		/* Possible Errors */
		"for-direction": "error",
		"getter-return": "error",
		"no-async-promise-executor": "error",
		"no-await-in-loop": "error",
		"no-compare-neg-zero": "error",
		"no-cond-assign": "error",
		"no-console": "error",
		"no-constant-condition": "error",
		"no-control-regex": "error",
		"no-debugger": "error",
		"no-dupe-args": "error",
		"no-dupe-else-if": "error",
		"no-dupe-keys": "error",
		"no-duplicate-case": "error",
		"no-empty": "error",
		"no-empty-character-class": "error",
		"no-ex-assign": "error",
		"no-extra-boolean-cast": "error",
		"no-extra-parens": ["error", "all"],
		"no-extra-semi": "error",
		"no-func-assign": "error",
		"no-import-assign": "error",
		"no-inner-declarations": ["error", "both"],
		"no-invalid-regexp": "error",
		"no-irregular-whitespace": [
			"error",
			{
				"skipComments": true,
				"skipStrings": true,
				"skipRegExps": true,
				"skipTemplates": true
			}
		],
		"no-misleading-character-class": "error",
		"no-obj-calls": "error",
		"no-prototype-builtins": "error",
		"no-regex-spaces": "error",
		"no-setter-return": "error",
		"no-sparse-arrays": "error",
		"no-template-curly-in-string": "error",
		"no-unexpected-multiline": "error",
		"no-unreachable": "error",
		"no-unsafe-finally": "error",
		"no-unsafe-negation": "error",
		"require-atomic-updates": "error",
		"use-isnan": "error",
		"valid-typeof": "error"
		/* Best Practices */
	}
}
